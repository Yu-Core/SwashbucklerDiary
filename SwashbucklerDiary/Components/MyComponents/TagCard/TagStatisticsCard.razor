@namespace SwashbucklerDiary.Components

<MCard Class="pa-4"
       Elevation="0"
       Rounded="@("lg")">
    <MListItem Dense="true">
        <MListItemContent Class="font-weight-bold">
            @(I18n.T("Statistics.Name"))
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.TagCount")): @(TagCount)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.DiaryCount")): @(DiaryCount)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.EarliestDate")): @(EarliestDate)
        </MListItemContent>
    </MListItem>
    <MListItem Dense="true">
        <MListItemContent>
            @(I18n.T("Statistics.LastDate")): @(LastDate)
        </MListItemContent>
    </MListItem>
</MCard>
