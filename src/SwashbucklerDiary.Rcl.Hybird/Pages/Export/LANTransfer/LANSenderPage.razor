@page "/lanSender"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar Title="@(I18n.T("Send"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Elevation="0"
           Rounded="@("lg")">
        <MList>
            <MSubheader>
                <span>
                    @(I18n.T("List of available devices"))
                </span>
                <MSpacer></MSpacer>
                <MButton Icon="true"
                         OnClick="InitializeLANSenderService">
                    <MIcon>refresh</MIcon>
                </MButton>
            </MSubheader>

            <div>
                @foreach (var item in lanDeviceInfoListItems)
                {
                    <MListItem @key="item.IPAddress"
                               Class="mb-1 rounded"
                               OnClick="item.OnClick">
                        <MListItemIcon>
                            <MIcon>
                                @(item.DeviceIcon)
                            </MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                <wc-auto-scroll-text>@(item.DeviceName)</wc-auto-scroll-text>
                            </MListItemTitle>
                            <MListItemSubtitle>
                                <wc-auto-scroll-text>@(item.IPAddress)</wc-auto-scroll-text>
                            </MListItemSubtitle>
                        </MListItemContent>
                    </MListItem>

                    @if (item != lanDeviceInfoListItems.Last())
                    {
                        <MDivider Class="mx-5"></MDivider>
                    }
                }
            </div>

            @if (LANSenderService.IsSearching)
            {
                <MListItem>
                    <MListItemIcon>
                        <MProgressCircular Size="20"
                                           Width="2"
                                           Indeterminate="true">
                        </MProgressCircular>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle>
                            <wc-auto-scroll-text>@(I18n.T("Searching for available devices"))</wc-auto-scroll-text>
                        </MListItemTitle>
                    </MListItemContent>
                </MListItem>
            }
            else
            {
                @if (lanDeviceInfoListItems.Count == 0)
                {
                    <MListItem>
                        <MListItemIcon>
                            <MIcon>
                                cancel
                            </MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                <wc-auto-scroll-text>@(I18n.T("There are currently no available devices"))</wc-auto-scroll-text>
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                }
            }
        </MList>
    </MCard>
</ScrollContainer>

<TransferDialog @ref="transferDialog"
                @bind-Visible="showTransferDialog"
                Title="@(I18n.T(transferDialogTitle))"
                OnCancel="CancelSend">
</TransferDialog>
