@namespace SwashbucklerDiary.WebAssembly.Essentials

<MDialog Value="true"
         ContentClass="rounded-lg"
         Persistent
         MaxWidth="420">
    <MCard>
        <MCardTitle Class="font-weight-bold flex-nowrap">
            <wc-auto-scroll-text>@I18n.T("Quit")</wc-auto-scroll-text>
        </MCardTitle>
        <MCardText Class="pb-0">
            @I18n.T("Returning again will exit the application")
        </MCardText>
        <MCardActions>
            <MSpacer></MSpacer>
            <MButton Text="true"
                     OnClick="HandleOnCancle">
                @(I18n.T("Cancel"))
            </MButton>
        </MCardActions>
    </MCard>
</MDialog>