@page "/fileBrowse"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar>
    <MyTabs @bind-Value="tab"
            Items="tabListItems">
    </MyTabs>

    <MSpacer></MSpacer>

    <MultiMenu @bind-Visible="showMenu"
               DynamicListItems="menuItems">
        <ActivatorContent>
            <MButton @attributes="@context.Attrs"
                     Icon="true">
                <MultiDisplay>
                    <DesktopContent>
                        <MIcon>more_horiz</MIcon>
                    </DesktopContent>
                    <MobileContent>
                        <MIcon>more_vert</MIcon>
                    </MobileContent>
                </MultiDisplay>
            </MButton>
        </ActivatorContent>
    </MultiMenu>
</MyAppBar>

<SwiperTabItems @bind-Value="tab">
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <ImageWaterfall Value="imageResources"></ImageWaterfall>
        </MContainer>
    </SwiperTabItem>
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <AudioResourceCardList Value="audioResources"></AudioResourceCardList>
        </MContainer>
    </SwiperTabItem>
    <SwiperTabItem>
        <MContainer Class="my-container"
                    Fluid="true">
            <VideoWaterfall Value="videoResources"></VideoWaterfall>
        </MContainer>
    </SwiperTabItem>
</SwiperTabItems>

<DeleteDialog @bind-Visible="showDelete"
              Title="@(I18n.T("Delete"))"
              Content="@(I18n.T("Sure to delete unused files?"))"
              OnOK="DeleteUnusedResources">
</DeleteDialog>

<SelectFileTypesDialog @bind-Visible="showExport"
                       OnOK="Export">
</SelectFileTypesDialog>