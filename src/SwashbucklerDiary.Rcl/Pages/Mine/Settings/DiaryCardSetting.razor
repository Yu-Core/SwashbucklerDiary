@page "/diaryCardSetting"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar Title="@(I18n.T("Diary card"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Class="my-list-card"
           Elevation="0"
           Rounded="@("lg")">
        <MList>
            <MListItem>
                <MListItemIcon>
                    <MIcon>
                        markdown
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Markdown"))
                </MListItemContent>
                <MListItemAction>
                    <SettingSwitch @bind-Value="diaryCardMarkdown"
                                   SettingKey="@nameof(Setting.DiaryCardMarkdown)">
                    </SettingSwitch>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-5"></MDivider>

            <MListItem>
                <MListItemIcon>
                    <MIcon>
                        mdi:mdi-emoticon-happy-outline
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Weather and mood icon"))
                </MListItemContent>
                <MListItemAction>
                    <SettingSwitch @bind-Value="diaryCardIcon"
                                   SettingKey="@nameof(Setting.DiaryCardIcon)">
                    </SettingSwitch>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-5"></MDivider>

            <MListItem>
                <MListItemIcon>
                    <MIcon>
                        label
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Tag"))
                </MListItemContent>
                <MListItemAction>
                    <SettingSwitch @bind-Value="diaryCardTags"
                                   SettingKey="@nameof(Setting.DiaryCardTags)">
                    </SettingSwitch>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-5"></MDivider>

            <MListItem>
                <MListItemIcon>
                    <MIcon>
                        location_on
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Location"))
                </MListItemContent>
                <MListItemAction>
                    <SettingSwitch @bind-Value="diaryCardLocation"
                                   SettingKey="@nameof(Setting.DiaryCardLocation)">
                    </SettingSwitch>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-5"></MDivider>

            <MListItem OnClick="@(() => showDiaryCardTimeFormat = true)">
                <MListItemIcon>
                    <MIcon>
                        calendar_clock
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Time format"))
                </MListItemContent>
                <MListItemContent Class="setting-item-state">
                    <MListItemSubtitle>
                        @(I18n.TForTimeFormat(DiaryCardTimeFormatKey))
                    </MListItemSubtitle>
                </MListItemContent>
                <MListItemAction>
                    <MIcon>chevron_right</MIcon>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>
</ScrollContainer>

<RadioDialog @bind-Value="diaryCardTimeFormat"
             @bind-Visible="showDiaryCardTimeFormat"
             Title="@(I18n.T("Time format"))"
             TItemValue="string"
             TItem="KeyValuePair<string, string>"
             OnChange="DiaryCardTimeFormatChanged"
             Items="diaryCardTimeFormats"
             ItemText="it => I18n.TForTimeFormat(it.Key)">
</RadioDialog>
