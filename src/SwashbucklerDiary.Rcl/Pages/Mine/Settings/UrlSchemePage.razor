@page "/urlScheme"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MToolbar Elevation="0" Extended>
    <ChildContent>
        <MButton Icon="true"
                 OnClick="NavigateToBack">
            <MIcon>arrow_back</MIcon>
        </MButton>
        <MToolbarTitle Class="font-weight-bold flex-grow-1">
            <wc-auto-scroll-text>Url Scheme</wc-auto-scroll-text>
        </MToolbarTitle>
    </ChildContent>
    <ExtensionContent>
        <MChipGroup @bind-Value="UrlScheme"
                    Class="mb-2"
                    Mandatory>
            @foreach (var item in SchemeConstants.Schemes)
            {
                <MChip Value="item"
                       Filter>
                    @item
                </MChip>
            }
        </MChipGroup>
    </ExtensionContent>
</MToolbar>

<ScrollContainer>
    <MCard Class="mb-5"
           Elevation="0"
           Rounded="@("lg")">
        <MList Class="py-0">
            @foreach (var item in urlSchemePaths)
            {
                <MListItem @key="item"
                           OnClick="()=>CopyAsync(item.Path)">
                    <MListItemContent>
                        <MListItemTitle>
                            <wc-auto-scroll-text>@(I18n.T(item.Name))</wc-auto-scroll-text>
                        </MListItemTitle>
                        <MListItemSubtitle>
                            <wc-auto-scroll-text text-ltr>@($"{UrlScheme}://{item.Path}")</wc-auto-scroll-text>
                        </MListItemSubtitle>
                    </MListItemContent>
                    <MListItemAction>
                        <MIcon>content_copy</MIcon>
                    </MListItemAction>
                </MListItem>

                <MDivider Class="mx-5"></MDivider>
            }

        </MList>
    </MCard>
</ScrollContainer>

