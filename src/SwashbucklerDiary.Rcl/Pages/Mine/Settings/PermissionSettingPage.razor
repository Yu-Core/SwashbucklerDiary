@page "/permissionSetting"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar Title="@(I18n.T("System permission"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Elevation="0"
           Rounded="@("lg")">
        <MList>
            <MListItem OnClick="OpenSystemPermissionSetting">
                <MListItemIcon>
                    <MIcon>
                        photo_camera
                    </MIcon>
                </MListItemIcon>

                <MListItemContent>
                    @(I18n.T("Camera permission"))
                </MListItemContent>

                <MListItemContent Class="setting-item-state">
                    <MListItemSubtitle>
                        @CameraPermission
                    </MListItemSubtitle>
                </MListItemContent>

                <MListItemAction>
                    <MIcon>chevron_right</MIcon>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-5"></MDivider>

            <MListItem OnClick="OpenSystemPermissionSetting">
                <MListItemIcon>
                    <MIcon>
                        sd_card
                    </MIcon>
                </MListItemIcon>

                <MListItemContent>
                    @(I18n.T("Storage permission"))
                </MListItemContent>

                <MListItemContent Class="setting-item-state">
                    <MListItemSubtitle>
                        @StoragePermission
                    </MListItemSubtitle>
                </MListItemContent>

                <MListItemAction>
                    <MIcon>chevron_right</MIcon>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>
</ScrollContainer>
