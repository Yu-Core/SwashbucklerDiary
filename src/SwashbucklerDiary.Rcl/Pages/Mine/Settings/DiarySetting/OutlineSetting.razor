@page "/outlineSetting"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar Title="@(I18n.T("Outline"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Class="my-list-card"
           Elevation="0"
           Rounded="@("lg")">
        <MList>
            <MListItem Class="hidden-sm-and-down">
                <MListItemIcon>
                    <MIcon>
                        format_list_bulleted
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Display outline"))
                </MListItemContent>
                <MListItemAction>
                    <SettingSwitch @bind-Value="showOutline"
                                   SettingKey="@nameof(Setting.Outline)">
                    </SettingSwitch>
                </MListItemAction>
            </MListItem>

            <MDivider Class="mx-5 hidden-sm-and-down"></MDivider>

            <MListItem>
                <MListItemIcon>
                    <MIcon>
                        format_align_right
                    </MIcon>
                </MListItemIcon>
                <MListItemContent>
                    @(I18n.T("Position on the right"))
                </MListItemContent>
                <MListItemAction>
                    <SettingSwitch @bind-Value="rightOutline"
                                   SettingKey="@nameof(Setting.RigthOutline)">
                    </SettingSwitch>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>
</ScrollContainer>