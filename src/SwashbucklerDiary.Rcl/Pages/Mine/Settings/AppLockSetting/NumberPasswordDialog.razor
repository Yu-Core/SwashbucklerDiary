@namespace SwashbucklerDiary.Rcl.Pages
@inherits DialogComponentBase

<CustomMDialog MyValue="Visible"
               MyValueChanged="InternalVisibleChanged"
               ContentStyle="display: flex;flex-direction: column;"
               Fullscreen="true"
               Eager
               Transition=""
               OnBeforeShowContent="HandleOnBeforeShowContent">
    <MyAppBar OnClick="HandleOnCancel">
    </MyAppBar>

    <ScrollContainer ContentClass="pa-0" ContentStyle="height:100%;">
        <div class="d-flex justify-center align-center" style="width:100%;height:100%;">
            <div class="d-flex justify-center scroll-show" style="width:100%;max-height:100%;overflow:auto;">
                <div style="width:100%;height:fit-content;">
                    <NumberLock Title="@I18n.T(string.IsNullOrEmpty(firstValue) ? "Please enter password" : "Please enter the password again")"
                                Value="@numberLockValue"
                                OnFinish="HandleOnFinish">
                    </NumberLock>
                </div>
            </div>
        </div>
    </ScrollContainer>
</CustomMDialog>
