@page "/imageSetting"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar>
    <MButton Icon="true"
             OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MToolbarTitle Class="font-weight-bold">
        @(I18n.T("Setting.Display.Diary.Image.Name"))
    </MToolbarTitle>
    <MSpacer></MSpacer>
    <MButton Icon="true"
             OnClick="()=>showConfimDelete=true">
        <MIcon>
            mdi-delete-outline
        </MIcon>
    </MButton>
</MyAppBar>

<ScrollContainer>
    <ImageWaterfall Value="imageResources"></ImageWaterfall>
</ScrollContainer>

<DeleteDialog @bind-Visible="showConfimDelete"
              Title="@(I18n.T("Share.Delete"))"
              Content="@(I18n.T("Setting.Display.Diary.Image.DeleteUnused"))"
              OnOK="DeleteUnusedImageResources">
</DeleteDialog>