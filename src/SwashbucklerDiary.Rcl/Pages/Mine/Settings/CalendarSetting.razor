@page "/calendarSetting"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar Title="@(I18n.T("Calendar"))"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer>
    <MCard Class="mb-5"
           Elevation="0"
           Rounded="@("lg")">
        <MList Class="py-0">
            <MListItem OnClick="() => showFirstDayOfWeek = true">
                <MListItemIcon>
                    <MIcon>
                        mdi:mdi-calendar-week-begin-outline
                    </MIcon>
                </MListItemIcon>

                <MListItemContent Style="flex-basis:50%;">
                    <wc-auto-scroll-text>@(I18n.T("First day of week"))</wc-auto-scroll-text>
                </MListItemContent>

                <MListItemContent Class="ms-2" Style="flex-basis:50%;">
                    <MListItemSubtitle>
                        <wc-auto-scroll-text class="justify-end">@FirstDayOfWeekText</wc-auto-scroll-text>
                    </MListItemSubtitle>
                </MListItemContent>
                
                <MListItemAction>
                    <MIcon>chevron_right</MIcon>
                </MListItemAction>
            </MListItem>
        </MList>
    </MCard>
</ScrollContainer>

<SelectChipDialog @bind-Visible="showFirstDayOfWeek"
                  @bind-Value="@firstDayOfWeek"
                  @bind-Value:after="UpdateSetting"
                  Title="@(I18n.T("First day of week"))"
                  Items="firstDayOfWeekItems"
                  Mandatory="true">
</SelectChipDialog>
