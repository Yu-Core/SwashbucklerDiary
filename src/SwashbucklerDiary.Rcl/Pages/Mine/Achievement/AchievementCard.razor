@namespace SwashbucklerDiary.Rcl.Pages
@inherits MyComponentBase

<MCard Class="py-sm-3"
       Elevation="0"
       Rounded="@("lg")"
       Ripple="false">
    <MList>
        <MListItem>
            <MListItemAvatar>
                <MIcon XLarge
                       Color="@IconColor">
                    @Icon
                </MIcon>
            </MListItemAvatar>

            <MListItemContent>
                <MListItemTitle Class="mb-4 font-weight-bold">
                    @(I18n.T(Value.Name))
                </MListItemTitle>

                <MListItemSubtitle Class="mb-4">
                    @(I18n.T(Value.Description))
                </MListItemSubtitle>

                <MProgressLinear Value="@ProgressRate"
                                 Class="rounded-pill"
                                 Color="@ProgressRateColor"
                                 Height="20">
                    <strong style="color:@(ProgressRateTextColor);">
                        @ProgressRateText
                    </strong>
                </MProgressLinear>
            </MListItemContent>
        </MListItem>
    </MList>
</MCard>