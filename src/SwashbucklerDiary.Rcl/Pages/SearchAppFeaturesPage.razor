@page "/searchAppFeatures"
@inherits ImportantComponentBase

<MyAppBar>
    <MButton Icon
             OnClick="NavigateToBack">
        <MIcon>arrow_back</MIcon>
    </MButton>

    <TransparentTextField @bind-Value="search"
                          Placeholder="@(I18n.T("Please enter the function you want to search for"))"
                          OnInput="UpdateAppFeatures">
    </TransparentTextField>
</MyAppBar>

<ScrollContainer>
    @if (ShowPrivacyModeItem)
    {
        <MCard Class="mb-3 my-list-card"
               Elevation="0"
               Rounded="@("lg")"
               OnClick="ToPrivacyMode">
            <MList>
                <MListItem>
                    <MListItemIcon>
                        <MIcon Class="evident-icon">
                            mdi:mdi-hexagon-slice-3
                        </MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle>
                            @(I18n.T("Privacy mode"))
                        </MListItemTitle>
                    </MListItemContent>
                </MListItem>
            </MList>
        </MCard>
    }

    <Virtualize Items="_appFeatures"
                ItemSize="@ItemHeight"
                Context="item">
        <MCard @key="item"
               Class="mb-3 my-list-card"
               Elevation="0"
               Rounded="@("lg")"
               Href="@(item.Href)">
            <MList>
                <MListItem>
                    <MListItemIcon>
                        <MIcon Class="evident-icon">
                            @item.Icon
                        </MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="mb-2">
                            @(I18n.T(item.Name))
                        </MListItemTitle>
                        <MListItemSubtitle Class="text-caption-xs-only">
                            @(I18n.T(item.Path))
                        </MListItemSubtitle>
                    </MListItemContent>
                </MListItem>
            </MList>
        </MCard>
    </Virtualize>

    <EmptyResult Show="_appFeatures.Count == 0 && !ShowPrivacyModeItem"></EmptyResult>

</ScrollContainer>
