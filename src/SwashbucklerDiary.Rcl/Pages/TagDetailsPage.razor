@page "/tagDetails/{id:guid}"
@inherits DiariesPageComponentBase

<MyAppBar Title="@tagName"
          OnClick="NavigateToBack">
</MyAppBar>

<ScrollContainer Id="@scrollContainerId">
    <DiaryCardList @bind-Tags="Tags"
                   Value="Diaries" />
</ScrollContainer>

<div class="right-bottom-float-area">
    <BackTopButton Class="mb-2"
                   Selector="@scrollContainerSelector">
    </BackTopButton>
    <MyFloatButton Icon="mdi-pencil"
                   OnClick="ToWrite">
    </MyFloatButton>
</div>