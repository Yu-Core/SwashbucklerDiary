@namespace SwashbucklerDiary.Rcl.Layout
@inherits MainLayoutNavBase

<MNavigationDrawer App="true"
                   Value="Show"
                   Stateless="true"
                   MiniVariant="true"
                   MiniVariantWidth="76"
                   Touchless="true"
                   Style="top:initial !important;background:rgba(var(--m-theme-surface));">
    <MList Nav>
        @foreach (var item in Items)
        {
            <MainLayoutNavDrawerItem @key="item.Href"
                                     Value="item">
            </MainLayoutNavDrawerItem>
        }
    </MList>
</MNavigationDrawer>

@code {
    private bool Show => BreakpointService.Breakpoint.SmAndUp && IsPermanentPath;
}