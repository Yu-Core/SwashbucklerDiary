@namespace SwashbucklerDiary.Rcl.Components
@inherits CardComponentBase<TagModel>

<MCard Class="mb-5 tag-card elevation-sm-2--active"
       Elevation="0"
       Ripple="false"
       Rounded="@("lg")"
       OnClick="ToTagPage"
       @oncontextmenu="OpenMenu"
       __internal_preventDefault_oncontextmenu>
    <MListItem>
        <MListItemIcon>
            <MIcon>
                mdi-label-outline
            </MIcon>
        </MListItemIcon>

        <MListItemContent>
            @(Value.Name)
        </MListItemContent>

        <MListItemContent Class="setting-item-state">
            <MListItemSubtitle>
                @(diaryCount)
            </MListItemSubtitle>
        </MListItemContent>

        <MListItemAction @onclick:stopPropagation="true">
            <MButton @attributes="@activatorAttributes"
                     Icon="true"
                     Small="true"
                     OnClick="OpenMenu">
                <MIcon>mdi-pencil-outline</MIcon>
            </MButton>
        </MListItemAction>
    </MListItem>
</MCard>
