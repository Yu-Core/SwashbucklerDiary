@namespace SwashbucklerDiary.Rcl.Components
@inherits DialogComponentBase

<MultiSizeDisplay OnUpdate="UpdateDisplay">
    <MobileContent>
        <CustomPMobileDatePicker MyVisible="Visible"
                                 MyVisibleChanged="InternalVisibleChanged"
                                 Value="Value"
                                 ValueChanged="InternalValueChanged"
                                 Min="MobileMin"
                                 Max="MobileMax">
        </CustomPMobileDatePicker>
    </MobileContent>
    <DesktopContent>
        <DatePickerDialog Visible="Visible"
                          VisibleChanged="InternalVisibleChanged"
                          Value="Value"
                          ValueChanged="InternalValueChanged"
                          Min="DesktopMin"
                          Max="DesktopMax">
        </DatePickerDialog>
    </DesktopContent>
</MultiSizeDisplay>