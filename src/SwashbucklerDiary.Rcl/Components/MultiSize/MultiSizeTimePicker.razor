@namespace SwashbucklerDiary.Rcl.Components
@inherits DialogComponentBase

<MultiSizeDisplay OnUpdate="UpdateDisplay">
    <MobileContent>
        <CustomPMobileTimePicker MyVisible="Visible"
                                 MyVisibleChanged="InternalVisibleChanged"
                                 Value="Value"
                                 ValueChanged="InternalValueChanged"
                                 Precision="TimePrecision.Minute">
        </CustomPMobileTimePicker>
    </MobileContent>
    <DesktopContent>
        <TimePickerDialog Visible="Visible"
                          VisibleChanged="InternalVisibleChanged"
                          Value="Value"
                          ValueChanged="InternalValueChanged">
        </TimePickerDialog>
    </DesktopContent>
</MultiSizeDisplay>
