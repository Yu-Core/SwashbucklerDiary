@namespace SwashbucklerDiary.Rcl.Components
@inherits DialogComponentBase

<MDialog Value="Visible"
         ValueChanged="InternalVisibleChanged"
         ContentClass="rounded-lg"
         Persistent="true"
         MaxWidth="420">
    <MCard>
        <MCardTitle Class="font-weight-bold flex-nowrap">
            <wc-auto-scroll-text>@Title</wc-auto-scroll-text>
            <MSpacer></MSpacer>
            <MButton Icon="true"
                     OnClick="OnCancel">
                <MIcon>close</MIcon>
            </MButton>
        </MCardTitle>
        <MCardSubtitle Class="py-2">
            @InternalTransferredSizeText / @InternalTotalSizeText
        </MCardSubtitle>
         <MCardText>
            <div class="d-flex align-center">
                <MProgressLinear Value="@Percentage"
                                 Class="rounded-pill"
                                 Height="10">
                </MProgressLinear>
                <span class="text-body-2 ml-2" style="white-space:nowrap;">
                    @Percentage.ToString("0.00") %
                </span>
            </div>
        </MCardText>
    </MCard>
</MDialog>