@namespace SwashbucklerDiary.Rcl.Components
@inherits DialogComponentBase

<MDialog Value="Visible"
         ValueChanged="InternalVisibleChanged"
         ContentClass="rounded-lg"
         Persistent="true"
         MaxWidth="420"
         Eager="true">
    <MCard>
        <MCardTitle Class="font-weight-bold">
            @Title
            <MSpacer></MSpacer>
            <MButton Icon="true"
                     OnClick="OnCancel">
                <MIcon>mdi-close</MIcon>
            </MButton>
        </MCardTitle>
        <MCardSubtitle Class="py-2">
            @Bytes KB / @TotalBytes KB
        </MCardSubtitle>
         <MCardText>
            <div class="d-flex align-center">
                <MProgressLinear Value="@Ps"
                                 Class="rounded-pill"
                                 Height="10">
                </MProgressLinear>
                <span class="text-body-2 ml-2" style="white-space:nowrap;">
                    @Ps %
                </span>
            </div>
        </MCardText>
    </MCard>
</MDialog>