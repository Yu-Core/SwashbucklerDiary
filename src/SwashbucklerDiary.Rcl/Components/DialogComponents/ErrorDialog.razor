@namespace SwashbucklerDiary.Rcl.Components

<MDialog Value="true"
         ContentClass="rounded-lg"
         Persistent="true"
         Scrollable="true"
         MaxWidth="420">
    <MCard>
        <MCardTitle Class="font-weight-bold flex-nowrap">
            <MIcon Class="error--text mr-2">
                cancel
            </MIcon>
            <wc-auto-scroll-text>@(I18n.T("Error"))</wc-auto-scroll-text>
        </MCardTitle>
        <MCardText Class="pb-0 scroll-show">
            @Text
        </MCardText>
        <MCardActions>
            <MSpacer></MSpacer>
            <MButton Text="true"
                     Color="primary"
                     OnClick="CopyDetailedInformationAsync">
                @(I18n.T("Copy detailed information"))
            </MButton>
            <MButton Text="true"
                     Color="red"
                     OnClick="Quit">
                @(I18n.T("Quit"))
            </MButton>
        </MCardActions>
    </MCard>
</MDialog>

