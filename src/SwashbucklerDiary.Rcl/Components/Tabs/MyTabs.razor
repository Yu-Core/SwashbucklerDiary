@namespace SwashbucklerDiary.Rcl.Components

<MTabs Value="Value"
       ValueChanged="ValueChanged"
       Style="min-width: 0;"
       ActiveClass="text-h6 font-weight-bold"
       HideSlider>
    @foreach (var item in Items)
    {
        <MTab @key="item"
              Class="my-tab"
              Ripple="false">
            <wc-auto-scroll-text style="max-width: 30vw;">@(I18n.T(item.Text))</wc-auto-scroll-text>
        </MTab>
    }
</MTabs>
