@namespace SwashbucklerDiary.Rcl.Components
@inherits CardComponentBase<LocationModel>

<MCard Class="mb-5 location-card elevation-sm-2--active"
       Elevation="0"
       Ripple="false"
       Rounded="@("lg")"
       @oncontextmenu="OpenMenu"
       __internal_preventDefault_oncontextmenu>
    <MListItem>
        <MListItemIcon>
            <MIcon>
                location_on
            </MIcon>
        </MListItemIcon>
        <MListItemContent>
            <MListItemTitle>
                @(Value.Name)
            </MListItemTitle>
        </MListItemContent>
        <MListItemAction @onclick:stopPropagation="true">
            <MButton @attributes="@activatorAttributes"
                     Icon="true"
                     Small="true"
                     OnClick="OpenMenu">
                <MIcon>mdi:mdi-pencil-outline</MIcon>
            </MButton>
        </MListItemAction>
    </MListItem>
</MCard>
